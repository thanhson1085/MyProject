{% extends "KVSUserBundle::layout.html.twig" %}
{% block kvs_user_content %}

<div class="page-body">
<div class="container">

    <div class="content">
        <div class="form-container">
            <p class="form-title">LOREM IPSUM</p>

		<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
		<div class="apart">
			<div class="splitformleft">
					<div class="label"><p class="label-title even">LOREM IPSUM </p>Dolor sit amet, consectetuer adipiscing elit, diam nonummy nibh.
					</div>
			</div>
			<div class="splitformright">

				<div class="prompt name">

					<div class="holding">
						<div class="sidetip">
							<p class="ok isaok">Name looks great.</p>
							<p class="tip">{{ form_label(form.username, 'Username Description') }}</p>
							<p class="blank invalid error" role="alert">{{ form_errors(form.username) }} </p>
						</div>

						{{ form_widget(form.username) }}
						<span class="holder">{{ form_label(form.username) }} </span>
					</div>

				</div>

				<div class="prompt name">

					<div class="holding">
						<div class="sidetip">
							<p class="ok isaok">Name looks great.</p>
							<p class="tip">{{ form_label(form.email, 'Email Description') }}</p>
							<p class="blank invalid error" role="alert">{{ form_errors(form.email) }}</p>
						</div>

						{{ form_widget(form.email) }}
						<span class="holder">{{ form_label(form.email) }}</span>
					</div>

				</div>

				<div class="prompt name">

					<div class="holding">
						<div class="sidetip">
							<p class="ok isaok">Name looks great.</p>
							<p class="tip">{{ form_label(form.plainPassword, 'Password Description') }}</p>
							<p class="blank invalid error" role="alert">{{ form_errors(form.plainPassword) }}</p>
						</div>

						{{ form_widget(form.plainPassword.first) }}
						<span class="holder">{{ form_label(form.plainPassword) }}</span>
					</div>

				</div>

				<div class="prompt name">

					<div class="holding">
						<div class="sidetip">
							<p class="ok isaok">Name looks great.</p>
							<p class="tip">{{ form_label(form.plainPassword, 'Re-Password Description') }}</p>
							<p class="blank invalid error" role="alert">{{ form_errors(form.plainPassword) }}</p>
						</div>

						{{ form_widget(form.plainPassword.second) }}
						<span class="holder">{{ form_label(form.plainPassword) }}</span>
					</div>

				</div>

			</div>
		</div>

    {{ form_rest( form ) }}
	<input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
</form>
</div> <!--end form-container-->
</div>
</div>
</div>
{% endblock kvs_user_content %}
