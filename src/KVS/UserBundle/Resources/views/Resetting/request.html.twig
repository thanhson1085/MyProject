{% extends "KVSUserBundle::layout.html.twig" %}
{% block kvs_user_content %}
<div class="page-body">
<div class="container">

    <div class="content">
        <div class="form-container">
            <p class="form-title">LOREM IPSUM</p>
			<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="apart">
            <div class="splitformleft">
                    <div class="label"><p class="label-title even">LOREM IPSUM </p>Dolor sit amet, consectetuer adipiscing elit, diam nonummy nibh.
                    </div>
            </div>
            <div class="splitformright">

                <div class="prompt name">

                    <div class="holding">
                        <div class="sidetip">
                            <p class="ok isaok">Name looks great.</p>
                            <p class="tip">lorem ipsum</p>
                            <p class="blank invalid error" role="alert">
        					{% if invalid_username is defined %}
								{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        					{% endif %}
                        </div>

                      <input type="text" id="username" name="username" /> 
                        <span class="holder"><label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label> </span>
                    </div>

                </div>
			</div>

                
        <input type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />

            </form>
        </div>
    </div>



</div>

</div>

<div id="ajax-indicator" style="display:none;"><span>Loading...</span></div>

{% endblock %}
